<base:CustomUserControl x:Class="GenericControls.AdminPageContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GenericControls"
             xmlns:base="clr-namespace:GenericControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}" Height="300" VerticalAlignment="Bottom">
        <Label x:Name="label" Content="Administrator options" Margin="10,10,45,257" VerticalAlignment="Center" Height="33" Width="245" FontWeight="Bold" FontStyle="Italic" FontSize="20"/>
        <Button x:Name="updateBtn" Content="Create doctor account" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" Width="148" Click="doctorForm_Click"/>
        <Button x:Name="updateBtn_Copy" Content="Create department" HorizontalAlignment="Left" Margin="10,84,0,0" VerticalAlignment="Top" Width="148" Click="deptForm_Click"/>
        <Button x:Name="updateBtn_Copy1" Content="Create admin" HorizontalAlignment="Left" Margin="10,118,0,0" VerticalAlignment="Top" Width="148" Click="adminForm_Click"/>

    </Grid>
</base:CustomUserControl>
